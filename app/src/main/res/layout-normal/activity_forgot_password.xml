<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".authenticate.view.LoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@drawable/toolbar"
        android:orientation="horizontal"
        android:layout_height="25pt">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:onClick="goBack"
            android:layout_weight="4.5">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <sns.sn.systems.fonts.MyTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textColor="@color/colorWhite"
                android:text="Forgot Password"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_margin="15pt"
        android:orientation="vertical">

        <sns.sn.systems.fonts.MyTextViewNormal
            android:layout_width="wrap_content"
            android:textSize="8pt"
            android:layout_height="wrap_content"
            android:text="@string/enter_the_email_linked_to_your_account_we_ll_send_a_password_to_your_email_id"/>

        <sns.sn.systems.fonts.MyEditextNormal
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:paddingBottom="20dp"
            android:drawablePadding="5dp"
            android:textSize="8pt"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />
        <sns.sn.systems.fonts.MyButtonNormal
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:translationZ="4dp"
            android:layout_marginTop="10pt"
            android:textSize="8pt"
            android:textColor="@color/colorWhite"
            android:background="@drawable/round_button"
            android:text="@string/reset_my_password"
            android:textAllCaps="false" />


    </LinearLayout>


</LinearLayout>